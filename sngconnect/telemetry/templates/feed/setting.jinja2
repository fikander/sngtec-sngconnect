                        },
                        tooltip: {shared: true},
                        legend: {enabled: true},
                        colors: ['#AA4643', '#80699B', '#4572A7'],
                        plotOptions: {
                            area: {
                                lineWidth: 1,
                                marker: {
                                    enabled: false,
